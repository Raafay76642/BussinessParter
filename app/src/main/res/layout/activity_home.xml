<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/layoutgreenround"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/profile"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/profile"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="Profile"
                        android:textAllCaps="true"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/layoutroundorange"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/spaces"
                    android:onClick="openbooking"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/spaces"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="Bookings"
                        android:textAllCaps="true"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>








            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/layoutroundparrot"
                android:onClick="openParking"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/notifications"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Parking"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/layoutroundroyal"
                android:layout_margin="5dp"
                android:id="@+id/bookings"
                android:onClick="openWorkshop"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/booking"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_weight="1"
                    android:text="Workshop"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/layoutroundorange"
                android:layout_margin="5dp"
                android:layout_marginBottom="20dp"
                android:onClick="openServiceStations"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/logout"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_weight="1"
                    android:text="Service Stations"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>